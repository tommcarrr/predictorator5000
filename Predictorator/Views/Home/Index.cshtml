@model FixturesResponse

@{
    ViewData["Title"] = "Premier League Fixtures";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="get" class="form-inline mb-4">
        <div class="form-group mr-2">
            <label for="fromDate">From: </label>
            @Html.TextBoxFor(m => m.FromDate, "{0:yyyy-MM-dd}", new { id = "fromDate", name = "fromDate", @class = "form-control ml-2", type = "date" })
        </div>
        <div class="form-group mr-2">
            <label for="toDate">To: </label>
            @Html.TextBoxFor(m => m.ToDate, "{0:yyyy-MM-dd}", new { id = "toDate", name = "toDate", @class = "form-control ml-2", type = "date" })
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Reload</button>
    </form>

    @if (Model.Response.Any())
    {
        var groupedFixtures = Model.Response.GroupBy(f => f.Fixture.Date.ToString("dddd, MMMM d, yyyy"));

        foreach (var group in groupedFixtures)
        {
            <div class="date-block">
                <h4 class="date-header">@group.Key</h4>

                <div class="row fixture-header">
                    <div class="col-4">Home Team</div>
                    <div class="col-4 text-center">Prediction</div>
                    <div class="col-4">Away Team</div>
                </div>

                @foreach (var fixture in group)
                {
                    <div class="row align-items-center fixture-row">
                        <div class="col-4 d-flex align-items-center">
                            <img src="@fixture.Teams.Home.Logo" alt="@fixture.Teams.Home.Name" class="team-logo img-fluid"/>
                            @fixture.Teams.Home.Name
                        </div>
                        <div class="col-4 text-center">
                            @switch (fixture.Teams.Home.Name)
                            {
                                case "Everton" when fixture.Teams.Away.Name == "Liverpool":
                                    <input type="text" class="form-control score-input d-inline-block" value="10" readonly maxlength="2" pattern="[0-9]*" inputmode="numeric"/>
                                    <span>-</span>
                                    <input type="text" class="form-control score-input d-inline-block" value="0" readonly maxlength="2" pattern="[0-9]*" inputmode="numeric"/>
                                    break;
                                case "Liverpool" when fixture.Teams.Away.Name == "Everton":
                                    <input type="text" class="form-control score-input d-inline-block" value="0" readonly maxlength="2" pattern="[0-9]*" inputmode="numeric"/>
                                    <span>-</span>
                                    <input type="text" class="form-control score-input d-inline-block" value="10" readonly maxlength="2" pattern="[0-9]*" inputmode="numeric"/>
                                    break;
                                default:
                                    <input type="text" class="form-control score-input d-inline-block" maxlength="2" pattern="[0-9]*" inputmode="numeric"/>
                                    <span>-</span>
                                    <input type="text" class="form-control score-input d-inline-block" maxlength="2" pattern="[0-9]*" inputmode="numeric"/>
                                    break;
                            }
                        </div>
                        <div class="col-4 d-flex align-items-center">
                            <img src="@fixture.Teams.Away.Logo" alt="@fixture.Teams.Away.Name" class="team-logo img-fluid"/>
                            @fixture.Teams.Away.Name
                        </div>
                    </div>
                    <div class="row align-items-center details-row">
                        <div class="col-12 d-flex text-center">
                            @{
                                var ukTimeZone = TimeZoneInfo.FindSystemTimeZoneById("GMT Standard Time");
                                var ukTime = TimeZoneInfo.ConvertTime(fixture.Fixture.Date, ukTimeZone);
                            }
                            @ukTime.ToString("h:mm tt") - @fixture.Fixture.Venue.Name, @fixture.Fixture.Venue.City
                        </div>
                    </div>
                }
            </div>
        }
    }

    <div class="mt-3 buttons">
        <button id="fillRandomBtn" class="btn btn-secondary">Complete with Random Scores</button>
        <button id="clearBtn" class="btn btn-warning">Clear Predictions</button>
        <button id="copyBtn" class="btn btn-success">Copy Predictions to Clipboard</button>
    </div>
</div>