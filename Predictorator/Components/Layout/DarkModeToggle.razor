@rendermode InteractiveServer
@using Predictorator.Components.Layout

<MudIconButton Icon="@(Layout?.IsDarkMode == true ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
               OnClick="Toggle" Color="Color.Inherit"
               UserAttributes="@(new Dictionary<string, object>{{"id","darkModeToggle"}})" />

@code {
    [CascadingParameter] public MainLayout? Layout { get; set; }

    private Task Toggle() => Layout?.ToggleDarkModeAsync() ?? Task.CompletedTask;
}
